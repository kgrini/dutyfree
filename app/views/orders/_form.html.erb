<%= form_for(@order) do |f| %>

    <%= render 'shared/error_messages', object: @order %>

    <% @cart.each do |line_item| %>
        <%= f.hidden_field :product_id, :value => line_item.product.id %>
        <%= f.hidden_field :product_quantity, :value => line_item.quantity %>
        <%= f.hidden_field :product_name, :value => line_item.product.name %>
    <% end %>

    <%= f.text_field :name, :class => "form-control", :placeholder => "Имя" %>

    <%= f.text_field :address, :class => "form-control", :placeholder => "Адрес" %>

    <%= f.text_field :phone, :class => "form-control", :placeholder => "Телефон" %>

    <%= f.submit "Отправить заказ"%>


<% end %>


