<% form_for(message) do |f| %>

    <div class="field">
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </div>
    <div class="field">
      <%= f.label :email %><br />
      <%= f.text_field :email %>
    </div>
    <div class="field">
      <%= f.label :content, "Message" %><br />
      <%= f.text_area :content, :rows => 5 %>
    </div>
    <div class="actions"><%= f.submit "Send Message" %></div>
<% end %>