<%= form_for(contact) do |f| %>

      <%= f.label :name, "Имя" %><br />
      <%= f.text_field :name %>
      <br>

      <%= f.label :email %><br />
      <%= f.text_field :email %>
      <br>
      <%= f.label :message, "Сообщение" %><br />
      <%= f.text_area :message, :rows => 5 %>
      <br>

      <%= f.submit "Send Message" %>
<% end %>