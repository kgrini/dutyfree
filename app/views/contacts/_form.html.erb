<%= form_for(contact) do |f| %>

      <%= f.label :name %><br />
      <%= f.text_field :name %>

      <%= f.label :email %><br />
      <%= f.text_field :email %>

      <%= f.label :content, "Message" %><br />
      <%= f.text_area :content, :rows => 5 %>

      <%= f.submit "Send Message" %>
<% end %>