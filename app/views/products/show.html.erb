<% provide(:title, 'Товар') %>
<div class = "bkg_images">
  <%= render "shared/bg_images" %>
</div>
<header class = "header">
  <%= render "shared/header" %>
</header>
<section class = "categories">
  <%= render "shared/categories" %>
</section>
<section class="products_block">
  <section class="products_background">
  </section>
    <ul id="products_list">
        <li  class="product_form" >
            <%= image_tag @product.images_url(:thumb), :class => "img   " %>
        </li>
        <section class="product_description">
            <li>
                <b><%= t "products.show.name" %>:</b> <%= @product.name %>
            </li>
            <li>
              <b><%= t ".description" %>:</b> <%= @product.description %>
            </li>
            <li>
              <b><%= t ".weight" %>:</b> <%= @product.size %> gramms
            </li>
            <li>
              <b><%= t ".price" %>:</b> <%= @product.price %> mdl
            </li>
            <li>
                <%= button_to "Добавить в корзину", line_items_path(:product_id => @product), :remote => true, :id => "button" %>
            </li>
        </section>
    </ul>

</section>

