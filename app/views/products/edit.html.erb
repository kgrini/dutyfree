<h4>Редактировать продукт</h4>
<div class="form-group">
  <%= form_for [@categories, @product], :html => {:multipart => true} do |f| %>

      <%= render 'shared/error_messages', object: @product %>
      <%= f.label :name %>
      <%= f.text_field :name, :class => 'form-control'  %>

      <%= f.label :description %>
      <%= f.text_field :description, :class => 'form-control' %>

      <%= f.label :size %>
      <%= f.number_field :size, :class => 'form-control' %>

      <%= f.label :price %>
      <%= f.number_field :price, :class => 'form-control' %>

      <%= f.label :images %>
      <%= f.file_field :images, :class => 'form-control' %>

      <%= f.submit 'Submit', :class => "btn btn-primary" %>

  <% end %>
</div>