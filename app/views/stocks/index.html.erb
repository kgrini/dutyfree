<% provide(:title, 'Акции') %>
<div class = "bkg_images">
  <%= render "shared/bg_images" %>
</div>
<header class = "header">
  <%= render "shared/header" %>
</header>
<section class = "categories">
  <%= render "shared/categories" %>
</section>
<section class="products_block">
  <section class="products_background">
  </section>
  <%#= render "shared/products_block" %>
  <ul class="stock_list">

        <% @stocks.each do |stock| %>
            <li>
                <%= image_tag stock.images_url(:thumb), :class => "float" %>
                <%= stock.description %>
              <br>
                <%= link_to "Далее",  stock_path(stock)%>
                <br><br><br><br><br><br>
              <hr />
            </li>
        <% end %>
    <%= will_paginate @stocks  %>
  </ul>

</section>
