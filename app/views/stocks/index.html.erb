
<%= render "shared/column_menu" %>

<section class="main_block">
    <ul>
      <% @stocks.each do |stock| %>
          <%= image_tag stock.images_url(:thumb) %>
          <%= stock.description %>

          <%= link_to "Show", stock %>
          <%= link_to "Edit", edit_stock_path(stock) %>
          <%= link_to "Destroy", stock,  method: :delete, :data => { :confirm => "Are you sure?" } %>

      <% end %>
    </ul>
    <%= link_to "Create Stock", new_stock_path %>
</section>