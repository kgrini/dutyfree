<% if object.errors.any? %>
    <div id = "error">
      <div class="alert alert-error">
        The form contains errors <%= pluralize(object.errors.count, "error") %>
      </div>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
            <li>
              <%= msg %>
            </li>
        <% end %>
      </ul>
    </div>
<% end %>